<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlexPlaylistExporter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PlexPlaylistExporter"
    Shell.FlyoutBehavior="Flyout" >

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="{x:Static local:Routes.Main}" />

    <ShellContent Title="Playlists"
                  ContentTemplate="{DataTemplate local:PlaylistsPage}"
                  Route="{x:Static local:Routes.Playlists}"/>

</Shell>
