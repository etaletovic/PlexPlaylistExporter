<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PlexPlaylistExporter.ViewModels"
             x:Class="PlexPlaylistExporter.PlaylistsPage"
             Title="Playlists">
        <ListView ItemsSource="{Binding Playlists}" SelectedItem="{Binding Selected}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Id}" Detail ="{x:Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
</ContentPage>